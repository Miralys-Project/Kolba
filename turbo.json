{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": [],
			"inputs": ["src/**", "vitest.config.*", "tsconfig.json", "!dist/**"]
		},
		"lint": {
			"outputs": [],
			"inputs": [".eslintrc.*", "src/**", "!dist/**"]
		},
		"format": {
			"outputs": [],
			"inputs": [".prettierrc.*", "src/**", "!dist/**"]
		},
		"typecheck": {
			"outputs": [],
			"inputs": ["tsconfig.json", "src/**", "!dist/**"]
		},
		"release": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"prepare": {
			"outputs": []
		}
	},
	"globalDependencies": [
		"tsconfig.json",
		"tsconfig.base.json",
		"vitest.config.ts",
		".eslintrc.js",
		".prettierrc",
		".prettierrc.json",
		".eslintignore",
		".prettierignore",
		"package.json",
		"pnpm-lock.yaml"
	]
}
